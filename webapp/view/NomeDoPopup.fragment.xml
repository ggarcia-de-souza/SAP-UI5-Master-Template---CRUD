<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"   
     xmlns:f="sap.ui.layout.form">
<Dialog stretch="false" resizable="true" draggable="true" title="{= ${Carrid} ? ${i18n>editar_comp_aerea_title} : ${i18n>nova_comp_aerea_title}}">
<content> 
     <f:SimpleForm
                        id="formEdit"
                        minWidth="1024"
                        editable="false"
                        layout="ResponsiveGridLayout"
                        labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4"
                        columnsL="1" columnsM="1">                        
                        <f:content>
                        <Label text="{i18n>CompanyIDColon}" visible="{editCompanyModel>/isNew}"/>
                        <Input type="Text" visible="{editCompanyModel>/isNew}" value="{Carrid}"/>  

                        <Label text="{i18n>formCompanyName}"/>
                        <Input type="Text" value="{Carrname}"/>                        
                        <Label text="{i18n>formCurrCode}"/>
                        <Input type="Text" value="{Currcode}"/>
                        <Label text="{i18n>formUrl}"/>
                        <Input type="Text" value="{Url}"/>                                             
                        </f:content>
                    </f:SimpleForm>
    </content> 
    <buttons>
                    <Button text="{i18n>salvar_btn}" type="Emphasized" press=".onBtnSavePress "/>					
					<Button text="{i18n>voltar_btn}" type="Default" press=".onBtnVoltar"/>
                    <Button text="{i18n>delete_btn}" type="Reject" press=".onBtnDeletePress" visible="{= !${editCompanyModel>/isNew}}" />				
			</buttons>	

    </Dialog>
    </core:FragmentDefinition>